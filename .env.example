# Core Application Settings
FLASK_APP=application.app_factory:create_app
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=change-this-in-production
APP_NAME=TarkovCultistCircle
CONTAINER_PREFIX=tcc

# Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
WORKERS=4
WORKER_CLASS=gevent
THREADS=2
TIMEOUT=30
KEEP_ALIVE=2

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_VERSION=5.9.0-community
NEO4J_USER=neo4j
NEO4J_PASSWORD=change-this-password
NEO4J_PAGECACHE_SIZE=512M
NEO4J_HEAP_INITIAL=512M
NEO4J_HEAP_MAX=512M
NEO4J_DATABASE=neo4j
NEO4J_MAX_CONNECTION_POOL_SIZE=50
NEO4J_CONNECTION_TIMEOUT=20
NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60

# API Settings
API_VERSION=v1
API_PREFIX=/api
API_ENABLED=true
API_TIMEOUT=30
GRAPHQL_ENDPOINT=https://api.tarkov.dev/graphql

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour
RATE_LIMIT_API=1000/day
AUTH_LOGIN_LIMIT=5/5minutes
AUTH_REGISTER_LIMIT=3/hour
API_RATE_LIMIT=1000/hour
API_REFRESH_LIMIT=20/hour

# Authentication & Security
JWT_SECRET_KEY=change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800
JWT_ALGORITHM=HS256
AUTH_HEADER_NAME=Authorization
AUTH_HEADER_TYPE=Bearer

# CORS Settings
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*
CORS_MAX_AGE=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/application.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=10
LOG_JSON_INDENT=None

# Debug & Development
DEBUG_ROUTES_ENABLED=false
ENABLE_DEBUG_ROUTES=false
DEBUG_EXCLUDED_CONFIG_KEYS=KEY,PASSWORD,SECRET,TOKEN,CREDENTIALS

# Optional Services
SENTRY_DSN=
SENTRY_ENVIRONMENT=${FLASK_ENV}
SENTRY_TRACES_SAMPLE_RATE=1.0

# Optimizer Settings
OPTIMIZER_MAX_ITEMS=5
OPTIMIZER_MIN_PRICE=1000
OPTIMIZER_REFRESH_INTERVAL=300

# Items Settings
ITEMS_PER_PAGE=20